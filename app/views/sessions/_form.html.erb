
<div class="signup-form">
  <%= form_tag login_path   do |f| %>
    <div class="form-group">
      <%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
    </div>
    <div class="form-group">
      <div class="half-width">
        <%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Sign In', class: 'btn btn-block btn-info' %>
    </div>    
  <% end %>
</div>  
<div class="additional-links">By signing up you agree to <a href="#">Terms of Use</a> and <a href="#">Privacy</a></div>
</div>
